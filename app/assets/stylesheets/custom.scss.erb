.alert {
  background-color: #c91212;
  color: #C09853;
  margin-bottom: 0px;
  padding: 10px 0px 2px 14px;
  text-align: center;
  border-radius: 0px;
  text-shadow: 0 0px 0 rgba(255, 255, 255, 0.0);
  border: 0px;
}

.alert h4 {
  margin: 0;
}

.alert .close {
  line-height: 20px;
  position: relative;
  right: -21px;
  top: -2px;
}

.alert-danger, .alert-danger {
  background-color: #c91212;
  color: #ffffff;
  text-align: right;
}

.alert-info {
  background-color: #80b900;
  color: #ffffff;
  text-align: right;
}

.red-thumb {
