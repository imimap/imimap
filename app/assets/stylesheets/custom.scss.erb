.table {
  font-weight: 100;
}

.table th {
  font-weight: normal;
}

.pagination.imi {
  height: 40px;
  margin: 20px 0;
}

.pagination.imi ul {
  border-radius: 3px 3px 3px 3px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  display: inline-block;
  margin-bottom: 0;
  margin-left: 0;
}

.pagination.imi li {
  display: inline;
}

.pagination.imi a, .pagination.imi span {
  -moz-border-bottom-colors: none;
  -moz-border-left-colors: none;
  -moz-border-right-colors: none;
  -moz-border-top-colors: none;
  border-image: none;
  border-width: 0px 0px 0px 0;
  line-height: 19px;
  padding: 0 5px;
  text-decoration: none;
  background-color: #3c3c3c;
  color: #ffffff;
  width: 100%;
}

.pagination.imi a:hover, .pagination.imi .active a, .pagination.imi .active span {
  background-color: #90b800;
}

.pagination.imi .active a, .pagination.imi .active span {
  color: #999999;
  cursor: default;
}

.pagination.imi .disabled span, .pagination.imi .disabled a, .pagination.imi .disabled a:hover {
  background-color: transparent;
  color: #999999;
  cursor: default;
}

.pagination.imi li:first-child a, .pagination.imi li:first-child span {
  border-left-width: 1px;
  border-radius: 3px 0 0 3px;
}

.pagination.imi li:last-child a, .pagination.imi li:last-child span {
  border-radius: 0 3px 3px 0;
}

.pagination.imi-centered {
  text-align: center;
}

.pagination.imi-right {
  text-align: right;
}

.pager {
  list-style: none outside none;
  margin: 20px 0;
  text-align: center;
}

.pager:before, .pager:after {
  content: "";
  display: table;
  line-height: 0;
}

.pager:after {
  clear: both;
}

.pager li {
  display: inline;
}

.pager button {
  background-color: #333333;
  color: #ffffff;
  border: 1px solid #DDDDDD;
  display: inline-block;
  padding: 2px 10px;
  border-radius: 0px;
}

.pager button:hover {
  background-color: #80ba00;
  color: #333333;
  text-decoration: none;
}

.pager .next button {
  float: right;
}

.pager .previous button {
  float: left;
}

.pager .disabled button, .pager .disabled button:hover {
  background-color: #FFFFFF;
  color: #999999;
  cursor: default;
}

p.explanation {
  color: #333333;
  font-size: 18px;
  font-variant: small-caps;
