.nav-top > li > a {
  color:#000;
  text-shadow:none;
  font-family: 'Josefin Sans', sans-serif;
  text-transform: uppercase;
}

.navbar .nav.nav-top {
  font-size: 1rem;
  float: right;
  color: #6b6b6b;
  margin: 12px 50px 0 0;
}

.imi-nav-right {
  margin-left: 50%;
  //padding-left: 400px;
}

.imi-nav-right > li > a {
  float:left;
  display:inline;
  vertical-align: top;
  margin-left: 2px;
  margin-top: -3px;
  font-size:12px;
  font-weight:bold;
  background-color:#77b900  !important;
  color: #fff;
  padding-bottom: 3px;
  padding-left: 8px;
  padding-right: 8px;
  font-weight: 100;
                               /* nav right */
}
.imi-nav-right > li > a:hover{
  color: #000;
}

.imi-nav-right > li > a:focus{
  color: #000;
}

// imi-main-nav was .navbar .nav
.imi-main-nav {
  margin-left: 70px;
}

.imi-main-nav > li > a {
  color:#c3c8be;
  font-size: 15px;
  text-shadow:none;
  z-index: 1;
  margin-top: 30px;
}

.imi-main-nav > li > a:hover {
  color:#77b900;
}


.dropdown-menu{
  margin: 0 0 0;
  font-family: 'Josefin Sans', sans-serif;
  text-transform: uppercase;
}

.dropdown .dropdown-toggle {
  background-color:transparent;
  color:#FFF;
}

.dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus {
  color: #000;
  background-color: #77b900;
  background-image: none;
  filter: none;
}

ul.nav li.dropdown:hover ul.dropdown-menu{
    display: block;
}

.navbar .nav > li > a:focus, .navbar .nav > li > a:hover {
  color: #77b900;
}

.navbar .btn-navbar{
    background-image: linear-gradient(to bottom, rgb(51, 51, 51), rgb(51, 51, 51));
    border-color: rgb(255, 255, 255);
    box-shadow: none;
    text-shadow: none;
}
