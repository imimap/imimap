// container for navigation
.imi-map-header {
  background: url("<%= asset_path 'topbar-over.png' %>"), #292929;
  background-repeat: no-repeat;
  background-size: 100%;
  width: 100%;
  border-radius: 0 !important;
  height:129px;
  text-align:center;
  overflow: visible;
  margin-bottom: 20px;
}

// style for nav-brand within main navigation
.imi-map-logo {
  background: url("<%= asset_path 'logos.png' %>") no-repeat;
  background-size: 100%;
  margin-top: -20px;
  width: 130px;
  height: 130px;

  margin-top: 8px;
}

//
.imi-map-toggler {
  background-image: linear-gradient(to bottom, rgb(51, 51, 51), rgb(51, 51, 51));
  border-color: rgb(255, 255, 255);
  box-shadow: none;
  text-shadow: none;
}
.im-nav-link {
  color:#000;
  text-shadow:none;
  font-family: 'Josefin Sans', sans-serif;
  text-transform: uppercase;
  text-decoration: none;
  font-size: 1rem;
  float: right;
  color: #6b6b6b;
//  margin: 12px 50px 0 0;

}


// imi-main-nav was .navbar .nav
.imi-main-nav {
  margin-left: 70px;
}

.im-nav-link > li > a {
  color:#c3c8be;
  font-size: 15px;
  text-shadow:none;
  z-index: 1;
  margin-top: 30px;
}

.imi-main-nav > li > a:hover {
  color:#77b900;
}

//
// little green nav on top right
//
.imi-nav-right {
  margin-left: 50%;
  //padding-left: 400px;
}

.imi-nav-right > li > a {
  float:left;
  display:inline;
  vertical-align: top;
//  margin-left: 2px;
//  margin-top: -3px;
  font-size:12px;
  font-weight:bold;
  background-color:#77b900  !important;
  color: #fff;
  padding-bottom: 3px;
  padding-left: 8px;
  padding-right: 8px;
  padding-top: 3px;
  font-weight: 100;
                               /* nav right */
}

.imi-nav-right > li > a{
  text-decoration: none;
}
.imi-nav-right > li > a:hover{
  color: #000;
}

.imi-nav-right > li > a:focus{
  color: #000;
}


.dropdown-menu{
  margin: 0 0 0;
  font-family: 'Josefin Sans', sans-serif;
  text-transform: uppercase;
}

.dropdown .dropdown-toggle {
  background-color:transparent;
  color:#FFF;
}

.dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus {
  color: #000;
  background-color: #77b900;
  background-image: none;
  filter: none;
}
.locale-en {
  background-image: url("<%= asset_path 'en.gif' %>");
  background-repeat:repeat-y;
 }

.locale-de {
  background-image: url("<%= asset_path 'de.png' %>");
  background-repeat: repeat-y;
}
