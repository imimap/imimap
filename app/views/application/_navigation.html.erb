            <ul class="nav pull-right">
              <li><%= link_to(favorite_index_path, :alt => "Favorite") do %>
                  <i class="icon-heart icon-large"></i>
                <% end %>
              </li>

              <li class="dropdown">
                <a href="#" id="drop3" role="button" class="dropdown-toggle" data-toggle="dropdown">
