<div id="form-block4" class="text-left">
<div class="container">
    <%= hidden_field :i, :value => params[:internship_id] %>
  <h3><%=t"activerecord.attributes.company_address.choose_company_address" %></h3>
  <div class="row">
    <div class="col-md-4">
      <% if @company_address_suggestion%>
        <% @company_address_suggestion.each do |cs|%>
        <ul class="list-group">
          <li class="list-group-item">
            <%= link_to cs.street, company_address_path(:id => cs.id, :internship_id => params[:internship_id], :company_id => params[:company_id])%>
          </li>
        </ul>
        <%end%>
      <%end%>

    </div>
  </div>

 <div class="row">
    <div class="col-md-4">
      <ul class="list-group">
      <h3><%=t"activerecord.attributes.company_address.new_company_address" %></h3>
        <li class="list-group-item">
          <%= link_to t("activerecord.attributes.company_address.create") ,new_address_path(:company_id => params[:company_id],:internship_id => params[:internship_id])%>
        </li>
      </ul>
    </div>
  </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="field" id="field-titles2">
      </div>
    </div>
  </div>
