<table class="table table-striped text-left">
  <tbody>
      <tr>
        <td>
          <label class="checkbox">
            <input type="checkbox" <%= 'checked' if @current_user.student.all_personal_details_filled? %>>
              <%= link_to t("complete_internships.checklist.personal_details"), @current_user.student %>
          </label>
        </td>
      </tr>
      <tr>
        <td>
          <label class="checkbox">
            <input type="checkbox" <%= 'checked' if company_address?(internship) %>>
              <% if internship.company_address %>
                <%= link_to t("complete_internships.checklist.company_details"), edit_company_path(internship.company_address.company, :internship_id => internship.id)%>
              <% else %>
                <%= link_to t("complete_internships.checklist.company_details"), new_company_path(:internship_id => internship.id)%>
              <% end %>
          </label>
        </td>
      </tr>
      <tr>
        <td>
          <label class="checkbox">
            <input type="checkbox" <%= 'checked' if internship.all_internship_details_filled? %>>
              <%= link_to t("complete_internships.checklist.internship_details"),  edit_internship_path(internship.id)%>
          </label>
        </td>
      </tr>
      <tr>
        <td>
          <label class="checkbox">
            <input type="checkbox"> <%= t("complete_internships.checklist.contract") %>
          </label><br>
          <span class="ml-3">
            <input type="radio" name="original" value="original"> <%= t("complete_internships.checklist.contract_original") %>
          </span>
          <span class="ml-3">
            <input type="radio" name="copy" value="copy"> <%= t("complete_internships.checklist.contract_copy") %>
          </span>
        </td>
      </tr>
      <tr>
        <td>
          <label class="checkbox">
            <input type="checkbox"> <%= t("complete_internships.checklist.lsf_ausdruck") %>
          </label>
        </td>
      </tr>
      <tr>
        <td>
          <label class="checkbox">
            <input type="checkbox"> <%= link_to t("complete_internships.checklist.print_form") %>
          </label>
        </td>
      </tr>
  </tbody>
</table>
