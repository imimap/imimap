  <tbody>
      <tr>
        <td>
          <label class="checkbox">
            <input type="checkbox" <%= 'checked' %>> <%= link_to t "complete_internships.checklist.personal_details" %>
          </label>
        </td>
      </tr>
      <tr>
        <td>
