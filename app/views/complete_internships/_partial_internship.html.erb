                <% if internship.report_state %>
                  <%= t "internships.report_state.#{internship.report_state.id}" %>
                <% else %>
                  <%= '-' %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td style="width:20%">
                <%= t "complete_internships.details.certificate_state" %>
              </td>
