<div class="row statistics">
<%= form_tag "/de/internship_statistic" do |f| %>
  <%= select_tag(:semester_id, options_for_select(Semester.all.map { |s| [s.name, s.id] })) %>
  <%= submit_tag("Search") %>

<% end %>
<div class="col-xs-6"> 
<h3><%= @semesters.find(@semester_id).name %></h3>
  <%= column_chart Internship.joins(:company).where(semester_id: @semester_id).group(:country).count, colors: ["#77b900", "#999"] %> 
</div>