<div class="row statistics">
  <%= form_for @internship do |f| %>
  <div class="span4">
    <div class="field" id="field-titles">
      <%= f.label t "internships.attributes.semester" %>
      <%= f.select :semester_id, Internship.order(:semester_id), class: 'chzn-select', disabled: true  %>
    </div>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
  <% end %>

  <%= s = Semester.first%> 
  <%= l = Internship.where(semester_id: s)%>
  <div class="col-xs-6">
    <h3>Total</h3>
    <%= column_chart (l.map {|i| i.company.country}).group_by(l) %>
  </div>








  <div class="col-xs-6">
    <h3>Total number visits per country</h3>
    <%= column_chart Company.group(:country).count, colors: ["#77b900", "#999"]%>
  </div>
</div>