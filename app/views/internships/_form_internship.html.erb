<div class="container">
  <%= bootstrap_form_for @internship do |f| %>

<div class="row">
  <div class="col-md-4">
    <div class="field" id="field-titles">
      <%= f.label :title, t("internships.attributes.title1") %>
      <%= f.text_field :title, placeholder: "Game design website in Italy", skip_label: true  %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="field" id="field-titles">
      <%= f.label :semester_id, t("internships.attributes.semester1") %>
      <%= f.select :semester_id, semesters, class: 'chzn-select', skip_label: true  %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="field" id="field-titles">
      <%= f.label :start_date, t("internships.attributes.start_date1") %>
      <%= f.date_field :start_date, skip_label: true  %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="field" id="field-titles">
      <%= f.label :end_date, t("internships.attributes.end_date1") %>
      <%= f.date_field :end_date, skip_label: true  %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="field" id="field-titles">
      <%= f.label :operational_area, t("internships.attributes.operational_area1") %>
      <%= f.text_field :operational_area, placeholder: "Visual Reality, Website, 3D", skip_label: true %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="field" id="field-titles">
      <%= f.label :orientation_id, t("internships.attributes.orientation1") %>
    <%= f.select :orientation_id, orientations, class: 'chzn-select', skip_label: true  %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="field" id="field-titles">
      <%= f.label :tasks, t("internships.attributes.tasks1") %>
      <%= f.text_area :tasks, size: "4x5", placeholder: "Make and manage the company website, Make CSS for client websites", skip_label: true  %>
    </div>
  </div>

  <div class="col-md-4">
  <div class="field" id="field-titles">
    <%= f.label :programming_language_ids, t("internships.attributes.programming_language1") %>
    <%= f.select :programming_language_ids, @programming_languages, {}, { :multiple => true, class: 'chzn-select', skip_label: true } %>
</div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="field" id="field-titles">
      <%= f.label :working_hours, t("internships.attributes.working_hours1") %>
      <%= f.text_field :working_hours, hide_label: true, skip_label: true  %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="field" id="field-titles">
    <%= f.label :salary, t("internships.attributes.salary1")%>
      <%= f.text_field :salary, hide_label: true, skip_label: true  %>
    </div>
  </div>
</div>

<div class="row">
  <div class="pl-3">
    <div class="field" id="field-titles">
    <%= f.label :reading_prof_id, t("internships.attributes.which_professor_should_read")%>
    <%= f.select :reading_prof_id, @profs, class: 'chzn-select', disabled: false, skip_label: true  %>
    </div>
  </div>
</div>



<div class="row">
  <div class="col-md-4">
    <div class="field" id="field-titles2">
    <%= f.submit t('save')%>
    </div>
  </div>
</div>

</div>

<%= link_to t('buttons.back'), :back %>
</div>
<%end%>
</div>
