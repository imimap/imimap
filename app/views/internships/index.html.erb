<div class="margin_bottom_10">
<div id="form-block-wide">
<h3><%= t('internships.index.title')%> <%= @semester.name %></h3>
<%= form_tag(internships_path, method: "get") do %>
<%= render 'semester_select_with_status' %>
<% end %>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <% @header_names.each do |heading| %>
      <th><%= heading %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% @complete_internships.each do |ci| %>
    <tr>
    <% @field_names.each do |field|%>
    <td> <%= ci.send("#{field}") %></td>
    <%end%>
    </tr>
  <% end %>
  </tbody>
</table>
<p>Found <%= @internship_count %> internships.</p>
<p>
  Download:
  <%= link_to t('internships.index.export.csv'), internships_path(semester_id: @semester.id,
  internship_state_id: @internship_state.nil? ? nil : @internship_state.id,
  registration_state_id: @registration_state.nil? ? nil : @registration_state.id, format: "csv") %> |
  <%= link_to t('internships.index.export.excel'), internships_path(semester_id: @semester.id, format: "xlsx") %>
</p>
</div>
</div>
