        <br/>
        <%= t "Found Company, but different Address?" %><%= link_to t("companies.createNewAddress"), select_company_path %>
        </div>
      </div>
    </div>
    
    <h4>Supervisor</h4>

    <div class="row">
      <div class="col-md-4">
        <div class="field" id="field-titles">
          <%= f.text_field :supervisor_name %>
        </div>
      </div>

      <div class="col-md-4">
        <div class="field" id="field-titles">
          <%= f.text_field :supervisor_email %>
        </div>
      </div>
    </div>
  </div>

  <div id="internship" class="tabcontent">

  <h3>Internship Details</h3>

  <div class="row">
    <div class="col-md-4">
      <div class="field" id="field-titles">
        <%= f.text_field :title, placeholder: "Game design website in Italy" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="field" id="field-titles">
        <%= f.select :semester_id, get_semesters, {}, class: 'chzn-select' %>
