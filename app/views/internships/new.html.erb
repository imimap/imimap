        </div>
  
        <div class="col-md-4">
          <div class="field" id="field-titles2">
          <%=t "students.attributes.zip" %> :</b>
          <span class="form-static"><%=@current_user.student.zip%></span>
          </div>
        </div>
      </div>
  
      <div class="row">
        <div class="col-md-4">
          <div class="field" id="field-titles2">
          <%=t "students.attributes.city" %> :</b>
          <span class="form-static"><%=@current_user.student.city%></span>
          </div>
        </div>
      </div>
    </div>
  
    

  <div id="company" class="tabcontent">
    <h3>Company Details</h3>
    <p>Select your internship company :</p> 
    <div class="row">
      <div class="col">
        <div class="field" id="field-titles">
        <%= f.select :company_address_id, Company.order(:name).company_name_address.map { |c| [c.last, c.first]}, class: 'chzn-select', disabled: false, hide_label: true %> 
        <br/>
