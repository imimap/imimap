        <%= t "users.attributes.first_name" %>
        <span class="form-static"><%= @current_user.student.first_name %></span>
        </div>
      </div>
    <div class="col-md-4">
      <div class="field" id="field-titles2">
        <%= t "users.attributes.last_name" %>
        <span class="form-static"><%= @current_user.student.last_name %></span>
        </div>
      </div>
    </div>
  
    <div class="row">
        <div class="col-md-4">
          <div class="field" id="field-titles2">
          <%=t "students.attributes.birthday" %>
          <span class="form-static"><%=@current_user.student.birthday%></span>
          </div>
        </div>
  
        <div class="col-md-4">
          <div class="field" id="field-titles2">
            <%=t "students.attributes.birthplace" %>
