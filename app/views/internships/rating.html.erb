    <div class="row">
      <div class="col-md-4">
        <div class="field" id="field-titles">
          <%= f.check_box :recommend %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="field" id="field-titles">
        <%= f.label t("internships.attributes.living_costs") + " â‚¬ / " + t("unit.month") %><br />
        <%= f.text_field :living_costs, hide_label: true %>
