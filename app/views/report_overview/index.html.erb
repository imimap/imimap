<h1 class=""> <%= t "REPORT OVERVIEW" %> </h1>



<%= form_tag "/de/report_overview" do |f| %>
    <%= select_tag(:semester, options_for_select(Semester.all.map { |s| [s.name, s.id] })) %>
    <%= submit_tag("Search") %>
<% end %>

<%= form_tag(current_internships_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Recipes" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<%= form_tag(current_internships_path, :method => 'get') do %>


    <div class="row-fluid">

      <div class="span4">
        <%= select_tag :semester, options_for_select(@internships.map(&:semester).uniq.map{ |s| [s.name, s.id] }),  { :multiple => true , class: 'chzn-select', 'data-placeholder'=>t("choose.semester")}  %>
      </div>




    </div>
    <br/>

    <br/>

    <%= submit_tag t("search.title"), :name => "search", :class => "form2" %>


<% end %>



<div class="table-container">
  <table id="paginated" class="table tablesorter">

    <thead>

    <tr class="table_intern table_fin">

      <th class="name"><%= t "users.attributes.name" %></th>
      <th class="company"><%= t "companies.attributes.name" %></th>
      <th class="programming_language"><%= t "students.attributes.enrolment_number" %></th>
      <th data-sort="string" class="company"><%= t "internships.attributes.semester" %> <i class='icon-sort'></i></th>
      <th class="date"> <%=  "vorraussichtliche abgabe" %> </th>
      <th class="title"><%= t "internships.attributes.title" %> <i class='icon-sort'></i></th>
      <th data-sort="string" class="orientation"><%= t "internships.attributes.internship_report" %> <i class='icon-sort'></i></th>


    </tr>

    </thead>




    <tbody>



    <% @internships.each do |internship| %>



        <tr class="<%= cycle("even_row", "odd_row") %>">


          <td> <%= internship.student.name %></td>
          <td> <%= internship.company.name %></td>
          <td> <%= internship.student.enrolment_number %></td>
          <td> <%= internship.try(:semester).try(:name) %></td>
          <td> <%= internship.vorraussichtliche_abgabe %></td>
          <td> <%= internship.title %> </td>



          </td>

        </tr>
    <% end %>
    </tbody>
  </table

  </div>

