<div class="container">
  <% if @results.nil? %>
    NO RESULTS
  <% else %>
    <p class="text-center p-1"><%=t('search.results_found.start')%> <%= @results.count %> <%=t('search.results_found.finish')%></p>
  <table class="table table-striped table-sm table-borderless text-left">
    <tbody>
      <tr>
        <td class="font-weight-bold"><%=t('search.tableheaders.company')%></td>
        <td class="font-weight-bold"><%=t('search.tableheaders.location')%></td>
        <td class="font-weight-bold"><%=t('search.tableheaders.orientation')%></td>
        <td class="font-weight-bold"><%=t('search.tableheaders.programming_languages')%></td>
        <td class="font-weight-bold"><%=t('search.tableheaders.paid')%></td>
        <td class="font-weight-bold">Semester</td>
      </tr>
    <% @results.each do |result| %>
          <tr>
            <td><%=result.company_address.try(:company).try(:name)%></td>
            <td><%=result.company_address.try(:city)%>
              <% if !result.company_address.try(:country_name).nil? %>
                <%=", " + result.company_address.try(:country_name)%>
              <% end %>
            </td>
            <td><%=result.orientation.try(:name)%></td>
            <td><%=result.programming_languages.map { |x| x.name }.join(', ')%></td>
            <td><%=result.payment_state.try(:name)%></td>
            <td><%=result.semester.try(:name)%></td>
          </tr>
    <% end %>

  </tbody>
</table>
  <% end %>
</div>
