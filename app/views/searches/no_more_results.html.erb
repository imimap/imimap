<script>
    $(document).ready(function(){
        $(".modal").modal('show');
    });
</script>

<div class="margin_bottom_10">
  <div id="form-block4" class="text-left mb-auto">
    <h4><%= t("search.header")%></h4>
    <% unless @current_user.admin? %>
    <div class="card text-white bg-success mt-2 mb-4 ml-3">
      <div class="card-body p-1">
        <p class="card-text"><strong><%= t 'search.notice.header' %>:</strong>
            <%= t 'search.notice.text1' %> <%=@internship_limit%> <%= t 'search.notice.text2' %>
        </p>
      </div>
    </div>
    <% end %>
    <br>
    <%= render 'form_search'%>
    <br>
  </div>
</div>

<!--Popup-->
<div class="modal fade" id="consent" tabindex="-1" role="dialog" aria-labelledby="consent_title" aria-hidden="true" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="consent_title">  <%= t 'search.modal.attention' %></h5>
      </div>
      <div class="modal-body text-left">
        <h5><%= t 'search.modal.no_more_results' %></h5>
      </div>
      <div class="modal-footer">
        <%= link_to t('search.modal.return_to_search_results') , start_search_path, :class => "btn btn-outline-danger custom-danger-link" %>
      </div>
    </div>
  </div>
</div>
