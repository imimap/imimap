
<%= bootstrap_form_for(@student) do |f| %>
<div id="form-block4" class="text-left">
  <h3> <%= t "students.personal_details" %></h3>

  <div class="row">
    <div class="col-md-4">
      <%=t "students.attributes.enrolment_number" %><br />
      <span class="form-control-static"><%=@student.enrolment_number%></span>
    </div>

    <div class="col-md-4">
        <%=t "students.attributes.email" %><br />
      <span class="form-control-static"><%=@student.email %></span>
    </div>
  </div>
  <br />

  <div class="row">
    <div class="col-md-4">
      <div class="field" >
      <%= f.text_field :first_name, :maxlength => 50 %>
      </div>
    </div>

  <div class="col-md-4">
    <div class="field">
      <%= f.text_field :last_name, :maxlength => 50%>
      </div>
    </div>
  </div>

  <div class="row">
      <div class="col-md-4">
        <div class="field">
            <%= f.text_field :birthday, data:{ provide:'datepicker'}%>
            <script type="text/javascript">
              $('.datepicker').datepicker({
    format: 'YYYY-MM-DD'
  })
            </script>
        </div>
      </div>

      <div class="col-md-4">
        <div class="field">
          <%= f.text_field :birthplace, :maxlength => 50 %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="field">
        <%= f.text_field :privateemail %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="field">
        <%= f.submit %>
        </div>
      </div>
    </div>
  </div>

  <% end %>
