
<%= bootstrap_form_for(@student) do |f| %>
<div id="form-block4" class="text-left">
<small><%= t "forms.what_do_stars_mean1" %></small><br>
<small><%= t "forms.what_do_stars_mean2" %></small>
  <h3> <%= t "students.personal_details" %></h3>
  <div class="row">
    <div class="col-md-4">
      <%=t "students.attributes.enrolment_number" %><br />
      <span class="form-control-static"><%=@student.enrolment_number%></span>
    </div>

    <div class="col-md-4">
        <%=t "students.attributes.email" %><br />
      <span class="form-control-static"><%=@student.email %></span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="field" >
      <%= f.text_field :first_name, :maxlength => 50 %>
      </div>
    </div>

  <div class="col-md-4">
    <div class="field">
      <%= f.text_field :last_name, :maxlength => 50%>
      </div>
    </div>
  </div>

  <div class="row">
      <div class="col-md-4">
        <div class="field">
            <%= f.text_field :birthday, {"data-provide" => 'datepicker',
            'data-date-format' => "yyyy-mm-dd",
            'data-date-start-view' => 'years',
            format: :datepicker
          }%>
            <script type="text/javascript">
              $(document).ready(function(){
                $('.datepicker').datepicker();
              });
            </script>
        </div>
      </div>

      <div class="col-md-4">
        <div class="field">
          <%= f.text_field :birthplace, :maxlength => 50 %>
        </div>
      </div>
    </div>

    <!--<div class="row">

      <div class="col-md-4">
        <div class="field">
        <#%=# f.text_field :private_email %>
        </div>
      </div>
    </div>-->

    <div class="row">
      <div class="col-md-4">
        <div class="field">
        <%= f.submit t('helpers.submit.generic_update')%>
        </div>
      </div>
    </div>

    <%= link_to t('buttons.back'), 'javascript:history.back()' %>
  </div>

  <% end %>
