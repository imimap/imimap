
<%= bootstrap_form_for(@student) do |f| %>
<div id="form-block4" class="text-left">
  <h3> <%= t "students.personal_details" %></h3>
  <%= render 'required_attributes_legend' %>

  <div class="row mb-3">
    <div class="col-md-4">
      <%=t "students.attributes.enrolment_number" %><br />
      <span class="form-control-static pl-2 pt-5"><%=@student.enrolment_number%></span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
        <%=t "students.attributes.email" %><br />
      <span class="form-control-static pl-2 pt-5"><%=@student.email %></span>
    </div>

    <div class="col-md-4">
      <div class="field">
      <%= f.text_field :private_email %>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="field" >
      <%= f.text_field :first_name, required_application(f, :first_name, maxlength: 50) %>
      </div>
    </div>

  <div class="col-md-4">
    <div class="field">
      <%= f.text_field :last_name, required_application(f, :last_name, maxlength: 50) %>
      </div>
    </div>
  </div>

  <div class="row">
      <div class="col-md-4">
        <div class="field">
          <%= f.date_field :birthday, required_application(f, :birthday, placeholder: t('date.formats.placeholder'))  %>
        </div>
      </div>

      <div class="col-md-4">
        <div class="field">
          <%= f.text_field :birthplace, required_application(f, :birthplace, maxlength: 50) %>
        </div>
      </div>
    </div>

    <div class="row">

      <div class="col-md-4">
        <div class="field">
          <br />
          <%= checklist_hidden_form_fields(form: f, params: params, resource: :student) %>
          <%= f.submit t('helpers.submit.generic_update')%>
        </div>
      </div>

    </div>
    <% if Rails.env.development?%>
      <div class="row">
        <%= checklist_back_to_overview_link(params: params, resource: :student) %>
      </div>
    <%end%>
</div>
<% end %>
